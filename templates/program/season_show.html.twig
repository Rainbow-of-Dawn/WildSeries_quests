{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <h2>Saisons</h2><br>
                {% for episode in season.episodes %}
                    <a href="{{ path('program_episode_show', { programSlug: program.slug, 'seasonId': season.id, 'episodeSlug': episode.slug }) }}">{{ episode.title }}</a><br>
                {% endfor %}
            <a href="{{ path('program_index') }}">Retour à la liste des programmes</a>
        </div>
    </div>
{% endblock %}