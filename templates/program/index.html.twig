{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries :</h1>
    <a href="{{ path('program_new') }}">Ajouter une nouvelle série</a><br><br><br>
    {% for program in programs %}
    <div>
        <h3>{{ loop.index }}. {{ program.title }} - Catégorie : {{ program.category.name }}</h3>
        <p>{{ program.summary }}</p>
        {# Lien vers la fiche de la série : #}
        <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
    </div><br>
    {% endfor %}
{% endblock %}