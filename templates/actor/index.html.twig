{% extends '/base.html.twig' %}

{% block title %}Acteurs{% endblock %}

{% block body %}
    <h1>Tous les acteurs :</h1>
    {% for actor in actors %}
        <h2>{{ actor.id }}. {{ actor.name }}</h2>
        <a href="{{ path("actor_show", {id: actor.id}) }}">Voir l'acteur</a>
    {% else %}
        Aucune acteur trouvé.
    {% endfor %}
    <br><br>
    <a href="{{ path('program_index') }}">
        Retour aux séries
    </a>
{% endblock %}