<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="{{ asset('build/images/favicon.ico') }}" rel="icon" type="image/png">
        <link href="{{ asset('build/images/apple-touch-icon.png') }}" rel="apple-touch-icon" sizes="180x180">
        <link href="{{ asset('build/images/favicon-32x32.png') }}" rel="icon" type="image/png" sizes="32x32" >
        <link href="{{ asset('build/images/favicon-16x16.png') }}" rel="icon" type="image/png" sizes="16x16">
        <link href="{{ asset('build/images/site.webmanifest') }}" rel="manifest">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="/build/app.css">
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/"><img src="{{ asset('build/favicon.ico') }}" alt="Logo"/> Wild Series</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/programs">Programs<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/categories">Categories<span class="sr-only">(current)</span></a>
                </li>
                {% if app.user %}
                    {{ app.user.email }}
                    <li class="nav-item active">
                        <a class="nav-link"  href="{{ path('app_profile') }}">Mon profil<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link"  href="{{ path('app_logout') }}">Se d√©connecter<span class="sr-only">(current)</span></a>
                    </li>
                {% else %}
                    <li class="nav-item active">
                        <a class="nav-link"  href="{{ path('app_login') }}">Se connecter<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link"  href="{{ path('app_register') }}">S'inscrire<span class="sr-only">(current)</span></a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
        {% block body %}
            <img src="{{ asset('build/path_to_image.png') }}" alt=""/>
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="/build/app.js"></script>
        {% endblock %}
    </body>
</html>
