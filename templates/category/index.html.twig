{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table program : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} - Catégorie : {{ category.name }}</h2>
            {# Lien vers la fiche de la catégorie : #}
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la fiche</a>
        </div>
    {% endfor %}
{% endblock %}